<!--Diccionario de los styles de los botones-->
    <ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ejercicio_styles_libro.Resources">
    <Style x:Key="estiloBtn" TargetType="Button">
        <Setter Property="Button.Background" Value="Black"/>
        <Setter Property="Button.HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Button.VerticalAlignment" Value="Stretch"/>
        <Setter Property="BorderBrush" Value="Gray"/>
        <Setter Property="BorderThickness" Value="0,0,1,0"/>
    </Style>
    <Style x:Key="estiloImagenBtn" TargetType="Image">
        <Setter Property="Image.Height" Value="20"/>
        <Setter Property="Image.Width" Value="20"/>
        <Setter Property="Image.Margin" Value="0,0,10,0"/>
    </Style>
</ResourceDictionary>
