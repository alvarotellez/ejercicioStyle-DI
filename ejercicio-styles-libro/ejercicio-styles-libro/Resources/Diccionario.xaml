<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:ejercicio_styles_libro.Resources">
    <Style x:Key="estiloBtn" TargetType="Button">
        <Setter Property="Button.FontFamily" Value="Arial" />
        <Setter Property="Button.Background" Value="Black"/>
        <Setter Property="Button.Foreground" Value="White"/>
        <Setter Property="Button.Height" Value="200"/>
        <Setter Property="Button.HorizontalAlignment" Value="Stretch"/>
        <Setter Property="Button.Margin" Value="0,0,1,0"/>
    </Style>
    <Style x:Key="estiloImagen" TargetType="Image">
        <Setter Property="Image.Stretch" Value="UniformToFill"/>
        <Setter Property="Image.Margin" Value="0,1,0,0"/>
    </Style>
</ResourceDictionary>
